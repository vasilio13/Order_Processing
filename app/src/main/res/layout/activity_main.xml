<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp">

    </androidx.appcompat.widget.Toolbar>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:checked="false"
            />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonTablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tablet"
            android:checked="true"
            />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioButtonNotebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notebook"
            android:checked="true"
            />



    </RadioGroup>
    <EditText
        android:id="@+id/device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:hint="iPhone SE"
        android:layout_alignBottom="@id/serial"
        />
    <EditText
        android:id="@+id/serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:hint="000000000000000"
        android:layout_alignBottom="@id/name_surname"
        />
    <EditText
        android:id="@+id/name_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:hint="Ivan Ivanov"
        android:layout_alignBottom="@id/number_contact"
        />
    <EditText
        android:id="@+id/number_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="18sp"
        android:hint="+375 xx xx-xx-xx"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@id/adress"
        />
    <EditText
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="18sp"
        android:hint="Street, home, flat"
        android:textColor="@android:color/black"
        />
    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:text="@string/button_add"
        android:src="@drawable/ic_add_box_black_24dp"
        android:layout_height="60sp" />

    />

    <Button
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:text="@string/button_photo"
        android:src="@drawable/ic_add_box_black_24dp"

        android:layout_height="60sp" />

    />

</LinearLayout>